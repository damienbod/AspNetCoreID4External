{
  "compilerOptions": {
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "skipLibCheck": true,
        "lib": [
      "es2018",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "exclude": [
    "node_modules",
    "./angularApp/main.ts",
    "**/*.spec.ts",
    "**/*mock.ts"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}